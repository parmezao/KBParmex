@model JDKB.Domain.Entities.Usuario

@{
    ViewBag.Title = "Sucesso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row text-center">
        <div class="col-sm-6 col-sm-offset-3">
            <br><br>
            <h2 style="color:#0fad00">Usuário criado com sucesso!</h2>
            <h1><i class="fa fa-check-circle-o" style="color: #0fad00"></i></h1>
            <h3>Prezado(a), @Model.NmUsuario</h3>
            <p style="font-size:20px;color:#5C5C5C;">
                Muito obrigado por se cadastrar no JDKB - Base de Conhecimento. Faça o login para compartilhar o Conhecimento!
            </p>
            <a href="@Url.Action("SignIn", "Auth")" class="btn btn-danger">     Login      </a>
            <br><br>
        </div>
    </div>
</div>
